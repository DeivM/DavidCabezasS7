<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DavidCabezasS7.Registrar">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Ventana de Registro!"
                 />
            <Entry x:Name="txtNombre" Placeholder="Ingrese el Nombre"/>
            <Entry x:Name="txtUsuario" Placeholder="Ingrese el Usuario"/>
            <Entry x:Name="txtContrasenia" Placeholder="Ingrese la Contraseña" IsPassword="True"/>

            <Button x:Name="btnRegistro" Text="Registro" Clicked="btnRegistro_Clicked"  />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>